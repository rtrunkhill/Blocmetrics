 <h1>New Application</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @register_app, :url => register_app_index_path do |f| %>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', placeholder: "What's the App's name?" %>
        </div>
        <div class="form-group">
            <%= f.label :url %>
            <%= f.text_field :url, class: 'form-control', placeholder: "and what is the URL?" %>
        </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>